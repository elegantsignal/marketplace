<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

    <context-param>
        <param-name>databaseUrl</param-name>
        <param-value>jdbc:postgresql://localhost:5434/test</param-value>
    </context-param>

    <display-name>Simple web</display-name>

    <servlet>
        <servlet-name>Test</servlet-name>
        <servlet-class>servlet.MyServlet</servlet-class>
        <init-param>
            <param-name>initParam</param-name>
            <param-value>init param value</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>Test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletFormUser</servlet-name>
        <servlet-class>servlet.ServletFormUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletFormUser</servlet-name>
        <url-pattern>/user_form</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>MyServlet2</servlet-name>
        <servlet-class>servlet.MyServlet2</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet2</servlet-name>
        <url-pattern>/2</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ServletTableBody</servlet-name>
        <servlet-class>servlet.ServletTableBody</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletTableBody</servlet-name>
