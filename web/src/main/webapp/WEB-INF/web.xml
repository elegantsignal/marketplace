        <servlet-class>servlet.MyPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyPageServlet</servlet-name>
        <url-pattern>/myPage</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>resource2</servlet-name>
        <servlet-class>servlet.Resource2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>resource2</servlet-name>
        <url-pattern>/r2</url-pattern>
    </servlet-mapping>

