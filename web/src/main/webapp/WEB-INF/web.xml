    </servlet>

    <servlet-mapping>
        <servlet-name>ServletTableGreen</servlet-name>
        <url-pattern>/table_green</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CookiesSetServlet</servlet-name>
        <servlet-class>servlet.CookiesSetServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CookiesSetServlet</servlet-name>
        <url-pattern>/cookie_set</url-pattern>
    </servlet-mapping>

